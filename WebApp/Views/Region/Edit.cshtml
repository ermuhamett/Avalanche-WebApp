@model WebApp.Models.Region

@{
    ViewData["Title"] = "Edit Region";
}

<h2>Edit Region</h2>

<form asp-controller="Region" asp-action="Edit">
    <input type="hidden" asp-for="RegionId" />
    <div class="form-group">
        <label asp-for="RegionName" class="control-label"></label>
        <input asp-for="RegionName" class="form-control" />
        <span asp-validation-for="RegionName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>